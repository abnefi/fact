{% extends 'stockarticle/template.html.twig' %}

{% block content %}
    <main role="main" class="container">
        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
            <div class="lh-100">
                <h6 class="mb-0 text-white lh-100">Article </h6>
                <small> Liste des articles</small>
            </div>
        </div>

        <div class="my-3 p-3 bg-white rounded box-shadow  table-responsive">
            <a type="button" class="btn btn-outline-dark" href="{{ path('stockarticle_new') }}"
               style="margin-bottom: 10px;"><span class="oi oi-plus"></span> Nouvel article</a>

            {{ include("messageSucces.html.twig") }}

            <table class="table table-bordered dataTable">
                <thead>
                <tr>
                    <th>N°</th>
                    <th>Référence</th>
                    <th>Désignation</th>
                    <th>Stock disponible</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for stockArticle in stockArticles %}
                    <tr>
                        <td><a href="{{ path('stockarticle_show', { 'id': stockArticle.id }) }}">{{ loop.index }}</a>
                        </td>
                        <td>{{ stockArticle.reference }}</td>
                        <td>{{ stockArticle.designation }}</td>
                        <td>{{ stockArticle.stockDisponible }}</td>
                        <td>{{ stockArticle.description }}</td>
                        <td>{{ stockArticle.created |date('d/m/Y') }}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" data-toggle="tooltip"
                                   data-placement="top" title="Voir"
                                   href="{{ path('stockarticle_show', { 'id': stockArticle.id }) }}">
                                    <span class="oi oi-eye"></span>
                                </a>
                                <a class="btn btn-primary" data-toggle="tooltip" data-placement="top"
                                   title="Modifier"
                                   href="{{ path('stockarticle_edit', { 'id': stockArticle.id }) }}">
                                    <span class="oi oi-pencil"></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}
