{% extends 'tiersfournisseur/template.html.twig' %}

{% block content %}
    <main role="main" class="container">
        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">

            <div class="lh-100">
                <h6 class="mb-0 text-white lh-100">Fournisseur </h6>
                <small> Modification d'un fournisseur</small>
            </div>
        </div>

        <div class="my-3 p-3 bg-white rounded box-shadow  table-responsive">
            <a type="button" class="btn btn-outline-dark" href="{{ path('tiersfournisseur_index') }}"
               style="margin-bottom: 10px;"><span class="oi oi-arrow-left"></span> Retour à la liste</a>

            <a type="button" class="btn btn-outline-dark"
               href="{{ path('supprimmer_tiers_fournisseur', { 'id': tiersFournisseur.id }) }}"
               style="margin-bottom: 10px;margin-left: 10px"><span class="oi oi-delete"></span> Supprimer</a>
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4 form-group">
                    <label>Code *</label>
                    {{ form_widget(form.code) }}
                    <span class="text-danger">{{ form_errors(form.code) }}</span>
                </div>
                <div class="col-md-4 form-group">
                    <label>Nom Fournisseur *</label>
                    {{ form_widget(form.nom) }}
                    <span class="text-danger">{{ form_errors(form.nom) }}</span>
                </div>
                <div class="col-md-4 form-group">
                    <label>Adresse *</label>
                    {{ form_widget(form.adresse) }}
                    <span class="text-danger">{{ form_errors(form.adresse) }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 form-group">
                    <label>Téléphone *</label>
                    {{ form_widget(form.telephone) }}
                    <span class="text-danger">{{ form_errors(form.telephone) }}</span>
                </div>
                <div class="col-md-4 form-group">
                    <label>Email</label>
                    {{ form_widget(form.mail) }}
                    <span class="text-danger">{{ form_errors(form.mail) }}</span>
                </div>
                <div class="col-md-2 form-group">
                    <label>N° IFU</label>
                    {{ form_widget(form.ifu) }}
                    <span class="text-danger">{{ form_errors(form.ifu) }}</span>
                </div>
                <div class="col-md-2 form-group">
                    <label>Pays</label>
                    {{ form_widget(form.pays) }}
                    <span class="text-danger">{{ form_errors(form.pays) }}</span>
                </div>
            </div>
            {#            <input type="submit" value="Create"/>#}
            <button class="btn btn-success" type="submit">Enregistrer</button>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
