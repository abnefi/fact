{% extends 'configpays/template.html.twig' %}

{% block content %}
    <main role="main" class="container">
        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
            <div class="lh-100">
                <h6 class="mb-0 text-white lh-100">Pays </h6>
                <small> Liste des pays</small>
            </div>
        </div>

        <div class="col-md-12 bg-white rounded box-shadow">
{#            <a type="button" class="btn btn-outline-dark" href="{{ path('configpays_new') }}"#}
{#               style="margin-bottom: 10px;"><span class="oi oi-plus"></span> Nouvel Pays</a>#}
            {{ include("messageSucces.html.twig") }}
            <table class="table table-bordered dataTable ">
                <thead>
                <tr>
                    <th>N°</th>
                    <th>Libellé</th>
                    <th>Code</th>
                    <th>Taux TVA</th>
                    <th>Taux AIB</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for pays in configPays %}
                    <tr>
                        <td>{{  loop.index }}</td>
                        <td>{{ pays.name }}</td>
                        <td>{{ pays.pays.isoCode() }}</td>
                        <td>{{ pays.pays.tauxTva() }}</td>
                        <td>{{ pays.pays.tauxAib() }}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" data-toggle="tooltip"
                                   data-placement="top" title="Voir"
                                   href="{{ path('configpays_show', { 'id': pays.id }) }}">
                                    <span class="oi oi-eye"></span>
                                </a>

                                <br>

                                <a class="btn btn-success" data-toggle="tooltip" data-placement="top"
                                   title="Configurer"
                                   href="{{ path('configpays_edit', { 'id': pays.id }) }}">
                                    <span class="oi oi-dashboard" ></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}
