{% extends 'configpays/template.html.twig' %}

{% block content %}

    <main role="main" class="container">
        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">

            <div class="lh-100">
                <h6 class="mb-0 text-white lh-100"> Pays </h6>
                <small> Création d'un Pays</small>
            </div>
        </div>

        <div class="my-3 p-3 bg-white rounded box-shadow">
            <a type="button" class="btn btn-outline-dark" href="{{ path('configpays_index') }}"
               style="margin-bottom: 10px;"><span class="oi oi-arrow-left"></span> Retour à la liste</a>

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6 form-group">
                    {{ form_label(form.libelle) }}
                    {{ form_widget(form.libelle, {'attr' : {'class' : 'form-control'}}) }}
                    <span class="text-danger">{{ form_errors(form.libelle) }}</span>
                </div>
                <div class="col-md-6 form-group">
                    {{ form_label(form.codePays) }}
                    {{ form_widget(form.codePays, {'attr' : {'class' : 'form-control'}}) }}
                    <span class="text-danger">{{ form_errors(form.codePays) }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    {{ form_label(form.TauxTva) }}
                    {{ form_widget(form.TauxTva, {'attr' : {'class' : 'form-control'}}) }}
                    <span class="text-danger">{{ form_errors(form.TauxTva) }}</span>
                </div>
                <div class="col-md-6 form-group">
                    {{ form_label(form.TauxAIB) }}
                    {{ form_widget(form.TauxAIB, {'attr' : {'class' : 'form-control'}}) }}
                    <span class="text-danger">{{ form_errors(form.TauxAIB) }}</span>
                </div>
            </div>

            <div>
                <input type="submit" class="btn btn-primary" value="Enregistrer"/>
            </div>
            {{ form_end(form) }}
        </div>
    </main>

{% endblock %}