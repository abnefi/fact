{% extends 'stockapprovisionnement/template.html.twig' %}

{% block content %}
    <main role="main" class="container">
        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
            <div class="lh-100">
                <h6 class="mb-0 text-white lh-100">Approvisionnement </h6>
                <small> Liste des approvisionnements</small>
            </div>
        </div>

        <div class="my-3 p-3 bg-white rounded box-shadow">
            <a type="button" class="btn btn-outline-dark" href="{{ path('stockapprovisionnement_new') }}"
               style="margin-bottom: 10px;"><span class="oi oi-plus"></span> Nouvel approvisionnement</a>

            {{ include("messageSucces.html.twig") }}

            <table class="table table-bordered dataTable">
                <thead>
                <tr>
                    <th>N°</th>
                    <th>Référence</th>
                    <th>Fournisseur</th>
                    <th>Date Réception</th>
                    <th>Date Création</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for stockApprovisionnement in stockApprovisionnements %}
                    <tr>
                        <td>
                            <a href="{{ path('stockapprovisionnement_show', { 'id': stockApprovisionnement.id }) }}">{{ loop.index }}</a>
                        </td>
                        <td>{{ stockApprovisionnement.reference }}</td>
                        <td>{{ stockApprovisionnement.fournisseur.nom }}</td>
                        <td>{% if stockApprovisionnement.dateReception %}{{ stockApprovisionnement.dateReception|date('d/m/Y') }}{% endif %}</td>
                        <td>{% if stockApprovisionnement.created %}{{ stockApprovisionnement.created|date('d/m/Y') }}{% endif %}</td>

                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" data-toggle="tooltip"
                                   data-placement="top" title="Voir"
                                   href="{{ path('stockapprovisionnement_show', { 'id': stockApprovisionnement.id }) }}">
                                    <span class="oi oi-eye"></span>
                                </a>
                                <a class="btn btn-primary" data-toggle="tooltip" data-placement="top"
                                   title="Modifier"
                                   href="{{ path('stockapprovisionnement_edit', { 'id': stockApprovisionnement.id }) }}">
                                    <span class="oi oi-pencil"></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </main>
{% endblock %}
