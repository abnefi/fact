{% extends 'stockcategorie/template.html.twig' %}

{% block content %}

{% endblock content %}

{% block fos_user_content %}
    <main role="main" class="container">
        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">

            <div class="lh-100">
                <h6 class="mb-0 text-white lh-100"> Catégorie </h6>
                <small> Création d'une catégorie</small>
            </div>
        </div>

        <div class="my-3 p-3 bg-white rounded box-shadow  table-responsive">
            <a type="button" class="btn btn-outline-dark" href="{{ path('stockcategorie_index') }}"
               style="margin-bottom: 10px;"><span class="oi oi-arrow-left"></span> Retour à la liste</a>
            {{ include("messageSucces.html.twig") }}
            {{ include("messageEchec.html.twig") }}

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12 form-group">
                    {{ form_label(form.libelle) }}
                    {{ form_widget(form.libelle, {'attr' : {'class' : 'form-control'}}) }}
                    <span class="text-danger">{{ form_errors(form.libelle) }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr' : {'class' : 'form-control'}}) }}
                    <span class="text-danger">{{ form_errors(form.description) }}</span>
                </div>
            </div>
            <div>
                <input type="submit" class="btn btn-primary" value="Enregistrer"/>
                {#<button class="btn btn-success" type="submit">Enregistrer</button>#}
            </div>
            {{ form_widget(form.createdAt, {'attr' : {'hidden' : 'hidden'}}) }}
            {{ form_widget(form.estSupprimer, {'attr' : {'hidden' : 'hidden'}}) }}

            {{ form_end(form) }}
        </div>
    </main>
{% endblock fos_user_content %}


