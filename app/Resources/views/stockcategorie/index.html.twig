{% extends 'stockcategorie/template.html.twig' %}

{% block content %}
    <main role="main" class="container">
        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
            <div class="lh-100">
                <h6 class="mb-0 text-white lh-100">Catégorie</h6>
                <small> Liste des catégories</small>
            </div>
        </div>

        <div class="my-3 p-3 bg-white rounded box-shadow  table-responsive">
            <a type="button" class="btn btn-outline-dark" href="{{ path('stockcategorie_new') }}"
               style="margin-bottom: 10px;"><span class="oi oi-plus"></span> Nouvel catégorie</a>
            {{ include("messageSucces.html.twig") }}
            <table class="table table-bordered dataTable">
                <thead>
                <tr>
                    <th>N°</th>
                    <th>Libelle</th>
                    <th>Description</th>
                    <th>Date de création</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for stockCategorie in stockCategories %}
                    <tr>
                        <td>{{  loop.index }}</td>
                        <td>{{ stockCategorie.libelle }}</td>
                        <td>{{ stockCategorie.description }}</td>
                        <td>{% if stockCategorie.createdAt %}{{ stockCategorie.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-outline-primary" data-toggle="tooltip"
                                   data-placement="top" title="Voir"
                                   href="{{ path('stockcategorie_show', { 'id': stockCategorie.id }) }}">
                                    <span class="oi oi-eye"></span>
                                </a>
                                <a class="btn btn-outline-primary" data-toggle="tooltip" data-placement="top"
                                   title="Modifier"
                                   href="{{ path('stockcategorie_edit', { 'id': stockCategorie.id }) }}">
                                    <span class="oi oi-pencil"></span>
                                </a>
                                <a class="btn btn-outline-danger" data-toggle="tooltip" data-placement="top"
                                   title="Supprimer"
                                   href="{{ path('supprimmer_stock_categorie', { 'id': stockCategorie.id }) }}">
                                    <span class="oi oi-trash"></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}



